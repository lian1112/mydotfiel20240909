            // 一般刪除操作都用黑洞寄存器（不 yank）
        {
            "before": ["x"],
            "after": ["\"", "_", "x"]
        },
        {
            "before": ["X"],
            "after": ["\"", "_", "X"]
        },
        {
            "before": ["d"],
            "after": ["\"", "_", "d"]
        },
        {
            "before": ["D"],
            "after": ["\"", "_", "D"]
        },
        {
            "before": ["d", "d"],
            "after": ["\"", "_", "d", "d"]
        },
        {
            "before": ["<C-\">"],
            "after": ["v", "i", "\""]
        },
        
        // leader 組合才會 cut（會 yank）
        {
            "before": ["<leader>", "d"],
            "after": ["d"]
        },
        {
            "before": ["<leader>", "D"],
            "after": ["D"]
        },
        {
            "before": ["<leader>", "x"],
            "after": ["x"]
        },
        {
            "before": ["<leader>", "d", "d"],
            "after": ["d", "d"]
        }
    ],
