{
    "button_macros": {
        "BTN_SOUTH": ["1"],        // A 按鈕觸發 1 鍵
        "BTN_EAST": ["2"],         // B 按鈕觸發 2 鍵
        "BTN_WEST": ["3"],         // X 按鈕觸發 3 鍵 
        "BTN_NORTH": ["4"],        // Y 按鈕觸發 4 鍵
        "BTN_TR": ["toggle_auto"],  // RB 按鈕切換自動模式
        "BTN_TL": ["q"],           // LB 按鈕觸發 Q 鍵 (藥水)
        
        // 可以添加更複雜的宏
        // 例如: LB + A 組合鍵觸發特殊技能
        "BTN_TL+BTN_SOUTH": ["5", "mouse_left", "6"],
        
        // D-pad 方向鍵映射
        "ABS_HAT0X_1": ["mouse_move_right_10"],   // D-pad 右
        "ABS_HAT0X_-1": ["mouse_move_left_10"],   // D-pad 左
        "ABS_HAT0Y_1": ["mouse_move_down_10"],    // D-pad 下
        "ABS_HAT0Y_-1": ["mouse_move_up_10"]      // D-pad 上
    },
    
    // 自動連按間隔 (秒)
    "auto_press_interval": 0.3,
    
    // 自動連按按鍵列表
    "auto_keys": ["1", "2", "3", "4", "q", "mouse_left"],
    
    // 搖桿靈敏度閾值 (0.0 - 1.0)
    "stick_threshold": 0.5,
    
    // 搖桿移動映射
    "stick_mappings": {
        "left_stick": {
            "up": ["w"],
            "down": ["s"],
            "left": ["a"],
            "right": ["d"]
        },
        "right_stick": {
            "up": ["mouse_move_up_5"],
            "down": ["mouse_move_down_5"],
            "left": ["mouse_move_left_5"],
            "right": ["mouse_move_right_5"]
        }
    },
    
    // Diablo 4 特定宏
    "game_macros": {
        "diablo4": {
            "quick_town_portal": ["t"],
            "quick_potion": ["q"],
            "show_map": ["m"],
            "inventory": ["i"],
            "character": ["c"]
        }
    }
}